{
  "name": "vscoderpc",
  "displayName": "VS Code RPC",
  "description": "Discord Rich Presence available in VS Code.",
  "version": "1.3.2",
  "publisher": "theuplauncher",
  "repository": {
    "url": "https://github.com/uplauncher/vscoderpc"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "discord",
    "discord rpc",
    "discord rich presence",
    "rich presence",
    "rpc",
    "vscode rpc"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "icon.png",
  "main": "dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "VS Code RPC (VSCRPC)",
      "properties": {
        "vscoderpc.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable this extension."
        },
        "vscoderpc.privateMode": {
          "type": "boolean",
          "default": false,
          "description": "Do not display file and workspace names."
        },
        "vscoderpc.clientId": {
          "type": "string",
          "default": "1147502929687875614",
          "description": "Use only if you know what this is. The default is \"1147502929687875614\".\nBe sure to enter only numerical values."
        }
      }
    },
    "commands": [
      {
        "command": "vscoderpc.startrpc",
        "title": "VSCodeRPC: Start RPC"
      },
      {
        "command": "vscoderpc.stoprpc",
        "title": "VSCodeRPC: Stop RPC"
      },
      {
        "command": "vscoderpc.reconnectrpc",
        "title": "VSCodeRPC: Reconnect RPC"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@xhayper/discord-rpc": "^1.1.2"
  }
}
